{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@controllers": ["src/controllers/*"],
      "@services": ["src/services/*"],
      "@util": ["src/util/*"],
      "@db": ["src/db/*"],
      "@base": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
