{
  "name": "@kzstats/backend",
  "version": "1.0.0",
  "author": "Joel Bergman",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \",cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "seed": "npx knex seed:run --knexfile ./src/db/knexfile.ts",
    "migrate": "npx knex migrate:latest --knexfile ./src/db/knexfile.ts",
    "postbuild": "cpy --cwd=src --parents \"**/*.json\" \"../dist/\""
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "gamedig": "^2.0.22",
    "integer": "^4.0.0",
    "knex": "^0.21.2",
    "mysql": "^2.18.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-steam": "^1.0.14",
    "socket.io": "^2.3.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/integer": "^1.0.1",
    "@types/jest": "^24.0.0",
    "@types/node": "^14.0.22",
    "@types/passport": "^1.0.4",
    "@types/passport-local": "^1.0.33",
    "@types/passport-steam": "^1.0.1",
    "@types/socket.io": "^2.1.11",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "concurrently": "^5.2.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.4.0",
    "jest": "^24.1.0",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "~3.7.2"
  }
}
